generator client {
  provider = "prisma-client-js"
  output   = "../../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Canteen {
  id        Int           @id @default(autoincrement())
  name      String
  image_url String
  slug      String?       @unique
  maps      CanteenMap[]
  shops     Shop[]
  qrcodes   TableQRCode[]

  @@map("canteens")
}

model CanteenMap {
  id          Int           @id @default(autoincrement())
  image_url   String
  floor       Int
  canteen_id  Int
  table_count Int           @default(0)
  canteen     Canteen       @relation(fields: [canteen_id], references: [id])
  qrcodes     TableQRCode[]

  @@map("canteen_maps")
}

model TableQRCode {
  id           String     @id @default(uuid())
  table_number Int
  floor        Int
  canteen_id   Int
  image_url    String
  map_id       Int
  canteen      Canteen    @relation(fields: [canteen_id], references: [id])
  map          CanteenMap @relation(fields: [map_id], references: [id])

  @@unique([table_number, canteen_id, floor])
  @@map("table_qrcodes")
}

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String

  @@map("faqs")
}
