model ShopTestimony {
  id         Int      @id @default(autoincrement())
  message    String
  rating     Int
  created_at DateTime @default(now())
  order_id   String   @unique
  order      Order    @relation(fields: [order_id], references: [id], onDelete: Cascade)

  @@map("shop_testimonies")
}

model AppTestimony {
  id         Int      @id @default(autoincrement())
  message    String
  from       String
  role       String?
  created_at DateTime @default(now())
  rating     Int      @default(5)

  @@map("app_testimonies")
}
